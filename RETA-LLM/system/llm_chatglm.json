{
    "model_name": "ChatGLM 6b",
    "model_path": "../../chatglm-6b",
    "causal_lm": false,
    "model_init_kwargs": {
        "trust_remote_code": true
    },
    "tokenizer_init_kwargs": {
        "trust_remote_code": true
    },
    "device": "cuda:0",
    "generate_parameter": {
        "temperature": {
            "component": "number_input",
            "kwargs": {
                "min_value": 0.0,
                "max_value": 2.0,
                "value": 0.1
            }
        },
        "top_p": {
            "component": "number_input",
            "kwargs": {
                "min_value": 0.0,
                "max_value": 1.0,
                "value": 0.95
            }
        },
        "top_k": {
            "component": "number_input",
            "kwargs": {
                "min_value": 0,
                "max_value": 100,
                "value": 40
            }
        },
        "do_sample": {
            "component": "select_slider",
            "kwargs": {
                "options": [false, true],
                "value": false
            }
        },
        "repetition_penalty": {
            "component": "number_input",
            "kwargs": {
                "min_value": 1.0,
                "max_value": 1.5,
                "value": 1.1
            }
        },
        "no_repeat_ngram_size": {
            "component": "number_input",
            "kwargs": {
                "min_value": 0,
                "max_value": 100,
                "value": 64
            }
        },
        "max_length": {
            "component": "number_input",
            "kwargs": {
                "min_value": 512,
                "max_value": 2048,
                "value": 2048
            }
        }
    }
}